@charset "utf-8";
.body {
	background-color: #fff;
}

ul {
	padding: 1rem;
	margin-top: 0;
}
ul a:not(:first-child) .travels-item{
	margin-top: 1rem;
}
.travels-item {
	position: relative;
	height: auto;
	min-height: 3rem;
}

.travels-item >img {
	width: 100%;
	height: auto;
}
.travel-tag{position: absolute;top: -.3rem;right: .5rem;}
.travel-tag >img{width: 3rem; height: auto;}
.simple-intro{position: absolute; bottom: .8rem;left: .7rem; width: 100%;max-width: 640px;font-size: .9rem;color: rgba(255,255,255,.5);}
.simple-intro span img{width: 3.5rem;height: auto;}
.simple-intro >div{position: absolute;left: 4rem;right: .7rem; bottom: 0;}
.simple-intro p{position: relative; margin: 0;line-height: 1.6rem;width: 100%;}
.simple-intro >div p:first-child{font-size: 1.1rem ;color: #fff;margin: 0;}
.pub-time{margin-left: 1rem;}
.position{position: absolute;right: .8rem;padding-left: 1.2rem; background: url(data:image/png;base64,) no-repeat 0 50%; background-size: 1rem auto;}

