/*����*/
#secSummray {
    height: 6.54rem;
    width: 100%;
    border-top: 1px solid #D3D3D3;
}

#secSummray .ul-score {
    margin: 1.4rem auto 0.9rem auto;
}

.grade {
    margin: 0;
    text-align: center;
    height: 1.3rem;
    line-height: 1.3rem;
    font-size: 0;
}

.grade span {
    margin: 0;
    color: #4D4D4D;
    font-size: 1.15rem;
}

.grade .score {
    position: relative;
    padding-right: 0.5rem;
    margin-right: 0.5rem;
}

.grade .score:after {
    content: '';
    width: 1px;
    height: 1rem;
    background-color: #4d4d4d;
    position: absolute;
    top:50%;
    margin-top: -0.5rem;
    right: 0;
}

/*������*/
.group {
    padding: 1.77rem 1rem 1rem 2rem;
    position: relative;
   	/*border-bottom: 1px solid #d3d3d3;*/
}
.group:first-child:before {
    top: 0;
    position: absolute;
    content: '';
    width: 100%;
    height: 1px;
    background-color: #d3d3d3;
    transform: scale(1,0.5);
    left: 0;
}
.group:after {
    bottom: 0;
    position: absolute;
    content: '';
    width: 100%;
    height: 1px;
    background-color: #d3d3d3;
    transform: scale(1,0.5);
    left: 0;
}

/*�ö�*/
.top {
    width: 2.2rem;
    height: 20px;
    position: absolute;
    top:-1px;
    right: 8px;
    background-color: #ff5858;
    color:white;
	/*background: url('../i/house/top.png') no-repeat center;*/
	/*background-size: auto 20px;*/
}
.group:first-child .top {
	top:0;
}


.top span{
    position: absolute;
    left: 50%;
    text-align: center;
    display: inline-block;
    width: 2.2rem;
    height: 12px;
    font-size: 12px;
    transform: translateX(-50%) scale(0.8,0.8);
    letter-spacing: 1px;
}
.top:after {
    content: '';
    width: 2.2rem;
    height: 5px;
    border-left: 1rem solid transparent;
    border-right: 1rem solid transparent;
    border-bottom: 5px solid white;
    position: absolute;
    bottom: -1px;
    left: 0;
}

/*�ֻ�ţ�����*/
