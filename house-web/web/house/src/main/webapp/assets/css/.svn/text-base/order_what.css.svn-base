/*支付方式*/
ul.list
{
	padding-left: 1rem;
	margin-bottom: 0;
	border-bottom: 1px solid #dcdcdc;
	border-top: 1px solid #dcdcdc;
	background-color: #fff;
}

ul.list li
{
	padding: 1.2rem .8rem 1.2rem 0;
	border-bottom: 1px solid #dcdcdc;
	font-size: 1.1rem;
}

ul.list li:last-child
{
	border-bottom: none;
}

ul.list .icon-right
{
	background: url(../i/neworder_3_5/right.png) no-repeat;
	background-size: 100% 100%;
	width: .52rem;
	height: .8rem;
}

.pay-type-list .icon {
	top:50%;
	left:0.2rem;
	margin-top:-1.2rem;
	position:absolute;
	display:inline-block;
	width:2.4rem;
	height:2.4rem;
	background-repeat: no-repeat;
	background-position: center;
	background-size:contain;
}

.pay-type-list .pay-type-item {
	position: relative;
}

.pay-type-list .icon-weixin {
	background-image: url('../i/order/icon-weixin.png');
}

.pay-type-list .icon-alipay {
	background-image: url('../i/order/icon-alipay.png');
}

.pay-type-list .pay-type-item span {
	margin-left: 3.2rem;
}

.pay-type-list .pay-type-item label {
	position:absolute;
	right:0.7rem;
	top:50%;
	margin-top:-0.7rem;
	display:inline-block;
	width:1.4rem;
	height:1.4rem;
	border: 1px solid #d3d3d3;
	border-radius:50%;
	/*outline: 1px solid #d3d3d3;*/
	/*outline-offset:0.4rem*/
}

.pay-type-list .pay-type-item input:checked + label:after {
	position:absolute;
	left:50%;
	top:50%;
	margin-top: -0.4rem;
	margin-left: -0.4rem;
	display:inline-block;
	width:0.8rem;
	height:0.8rem;
	border-radius:50%;
	background-color:#fb394c;
	content:'';
}