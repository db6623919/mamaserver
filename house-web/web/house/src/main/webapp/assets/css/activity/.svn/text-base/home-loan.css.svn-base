html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
	display: block;
}
body {
	line-height: 1;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}

@media screen and (min-width: 320px) {
    html {font-size: 12px;}
}
 
@media screen and (min-width: 360px) {
    html {font-size: 14px;}
}
 
@media screen and (min-width: 400px) {
    html {font-size: 16px;}
}
 
@media screen and (min-width: 440px) {
    html {font-size: 18px;}
}
 
@media screen and (min-width: 480px) {
    html {font-size: 20px;}
}
 
@media screen and (min-width: 640px) {
    html {font-size: 22px;}
}

html {
	font-family:"SimHei","Microsoft YaHei",微软雅黑,"MicrosoftJhengHei",华文细黑,STHeiti,MingLiu;
}

body {
	min-width: 320px;
	max-width: 640px;
	margin: 0 auto;
	background-color: #fff9f2;
	color:#583d32;
}

header {
	font-size: 1rem;
}

header .banner {
	background-color: #fff9f2;
	width:100%;
	height: 25rem;
	background: url('../../i/homeLoan/banner.jpg') no-repeat top center;
	background-size: cover;
}

header span {
	line-height: 150%;
	display: inline-block;
	width: 100%;
	box-sizing: border-box;
	padding: 2rem 1.143rem 0 1.143rem;
	text-indent: 2em;
}

header strong {
	color: #fd5100;
}

section {
	margin-top: 2.786rem;
}

section:first-child {
	margin-top: 1.786rem;
}

.title {
	font-size: 1.143rem;
	color: #3e1500;
	height:2.143rem;
	line-height: 2.143rem;
	width:100%;
	text-align: center;
	background-image: url('../../i/homeLoan/title-bg.png');
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;
}

ul {
	margin-top: 1.643rem;
	font-size: 0;
}

.advantage {
	font-size: 1rem;
	display: inline-block;
	width: 33%;
	vertical-align: top;
	text-align: center;
}

.advantage img {
	width: 3.571rem;
}

.advantage h3 {
	margin-top: 0.643rem;
	font-size: 1.143rem;
	font-weight: bold;
	color:#631e00;
}

.advantage span {
	line-height: 130%;
	display: inline-block;
	color: #736a65;
	margin-top: 0.643rem;
}

ul.ul-provide {
	margin-top: 1.357rem;
	text-align: center;
	padding-right: 1rem;
}

.provide {
	width: 33%;
	display: inline-block;
	font-size: 1rem;
	box-sizing: border-box;
	padding-left:1rem;
	vertical-align: top;
}

.cont {
	border: 1px solid #fed1a8;
	height: 8.929rem;
	width: 100%;
	box-sizing: border-box;
	border-radius: 2px;
	padding:0 0.5rem;
}

.cont h3 {
	font-size: 1.143rem;
	height: 2.714rem;
	line-height: 2.714rem;
	color:#ff5500;
	font-weight: bold;
	border-bottom: 1px solid #ff5500;
}

.cont span {
	line-height: 130%;
	display: inline-block;
	padding: 2rem 0;
	box-sizing: border-box;
	height: 6.215rem;
}

ul.ul-fit {
	margin-top: 2.5rem;
	padding: 0 1.071rem;
}

.fit {
	box-sizing: border-box;
	font-size: 1rem;
	width: 100%;
	height: 4.107rem;
	background-image: url('../../i/homeLoan/row1.png');
	background-repeat: no-repeat;
	background-position: center;
	background-size: contain;
	margin-bottom: 5px;
	padding: 1rem 1.8rem 0 6.6rem; 
	line-height: 120%;
}

.fit:nth-of-type(2) {
	background-image: url('../../i/homeLoan/row2.png');
}

.fit:nth-of-type(3) {
	background-image: url('../../i/homeLoan/row3.png');
	margin-bottom: 0;
}

footer img {
	width: 100%;
}

.apply-btn {
	display: block;
	margin: 2rem auto 0 auto;
	width:13.036rem;
	height:3rem;
	line-height: 3rem;
	background-color: #fe6112;
	color: white;
	text-decoration: none;
	text-align: center;
	font-size: 1.214rem;
	border-radius: 2px;
}
