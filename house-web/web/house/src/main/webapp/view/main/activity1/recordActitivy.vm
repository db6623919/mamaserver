			num = data.luckyIndex;
			lottery.speed = 100;
			lottery.prize = num; //中奖项
			$("#note").val(data.note);
			$("#totalPint").val(data.beanNums);
			roll();
			isRolled = true;
		}, 
		error: function(e) { 
