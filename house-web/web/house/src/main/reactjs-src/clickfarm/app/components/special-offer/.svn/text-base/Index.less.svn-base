@import '../common/common.less';
@page-color: #fb394c;

.banner {
  width: 100%;
}

.main {
  background-color: #ffd4d5;
  margin-top: -3.8rem;
  padding: 0 0.714rem 1.429rem 0.714rem;
}

.row {
  width: 100%;
  margin: 0 auto 0.714rem auto;
  font-size: 0;
  position: relative;
  z-index: 9;

  .img {
    width: 100%;
    height: 13.143rem;
    background-color: #fff;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }
  .detail {
    background-color: #fff;
    padding: 0.929rem 0.714rem 0 0.714rem;
    font-size: 1.071rem;
    line-height: 1.643rem;
    color: #555;
    position: relative;
    &:after {
      content: "";
      height: 8px;
      width: 100%;
      position: absolute;
      top: -6px;
      left: 0;
      background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAiUlEQVQ4T+2TUQ2DQBAF5zlAAnVQBxQFaKiCpg6KA5wUHCABByABB6+hAUIgF0j4ZX9vd7L7MidOlk7OcwG4MiCQge0YyID7KFoDVJK6tXgbkWwXwCtgaCHpvXybAbYj4As8dvQugaekfuhbAmogOfg3aknpDBhvbg8OT223IZP/Bjt3h7i5pM8PYqYgEbfcz/sAAAAASUVORK5CYII=);
      background-repeat: repeat-x;
      background-size: 8px 8px;
      background-position: left -1px;
    }
  }
  .priceCont {
    padding-bottom: 0.571rem;
    margin-top: 0.7rem;
    height: 2.856rem;
    line-height: 2.856rem;
    font-size: 1rem;
    color: @page-color;
    text-align: right;
    position: relative;
    .onePxBottom();
    strong {
      display: inline-block;
      font-size: 2.285rem;
      font-weight: normal !important;
      color: @page-color;
    }
    .oldPrice {
      font-size: 0.857rem;
      color: #979797;
      text-decoration: line-through;
      margin-left: 1.071rem;
      margin-right: 1.572rem;
    }
    .discount {
      color: #fff;
      position: absolute;
      width: 3.714rem;
      height: 1.179rem;
      display: inline-block;
      background-image: url(data:image/png;base64,);
      background-repeat: no-repeat;
      background-position: center top;
      background-size: contain;
      right: 0;
      text-align: center;
      line-height: 1.1rem;
      span {
        display: inline-block;
        width: 100%;
        height: 100%;
        font-size: 12px;
        transform: scale(0.83);
      }
    }
  }

  .footer {
    height: 3.357rem;
    display: flex;
    align-items: center;
    justify-content: space-around;
    .more {
      flex: 1;
      text-align: left;
      color: #38a9ff;
      font-size: 0.929rem;
    }
    .buy {
      display: inline-block;
      text-align: center;
      color: #fff;
      font-size: 1.071rem;
      width: 7.571rem;
      height: 2.214rem;
      line-height: 2.214rem;
      background-color: @page-color;
      border-radius: 3px;
      // .buyArrow {
      //   margin-left: 6px;
      //   display: inline-block;
      //   width: 0.893rem;
      //   height: 0.857rem;
      //   background-image: url(data:image/png;base64,);
      //   background-repeat: no-repeat;
      //   background-position: center;
      //   background-size: contain;
      // }
    }
  }
}

.footerImg {
  width: 100%;
  margin-top: 1.072rem;
}

.footerText {
  text-align: center;
  margin-top: 1rem;
  font-size: 0.857rem;
  color: #8f8f8f;
}
