@import '../common/variable';

.header {
	height:3.1rem;
	line-height: 3.2rem;
	text-align: center;
	width: 100%;
	font-size: 1.256rem;
	background-color: @bg-color;
	position: relative;
	font-weight: bold;
}

.back,.cancel,.ok {
	display: inline-block;
	height: 3.2rem;
	position: absolute;
}

.back {
	left: 1.4rem;
	width: 1.7rem;
	background: url(data:image/png;base64,);
	background-repeat: no-repeat;
	background-position: center;
	background-size: contain;
}

.cancel {
	text-align: center;
	left:0;
	padding-left: 1rem;
	font-size: 1rem;
}

.ok {
	color: @primary-color;
	text-align: center;
	font-size: 1rem;
	right:0;
	padding-right: 1rem;
}