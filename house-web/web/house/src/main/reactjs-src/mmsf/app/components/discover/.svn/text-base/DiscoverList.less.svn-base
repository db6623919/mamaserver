@import "../common/common.less";

.item {
	width:100%;
	height:10rem;
	background-color: #ddd;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	margin-bottom: 5px;
	color:#fff;
	padding-top: 3rem;
	box-sizing: border-box;
	h2 {
		font-size: 1.571rem;
		width: auto;
		margin: 0 auto ;
		text-align: center;
		span {
			display: inline-block;
			max-width: 85%;
			.textEllipsis();
			height: 2.3rem;
			line-height: 2.3rem;
			border-top: 1px solid #fff;
			border-bottom: 1px solid #fff;
			padding: 0 0.8rem;
		}
	}
	p{
		.textEllipsis();
		font-size: 0.929rem;
		text-align: center;
		margin-top: 0.5rem;
		padding-top: 0.5rem;
	}
}

.link {
	text-decoration: none;
}
